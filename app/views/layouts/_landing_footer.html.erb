<footer class="relative overflow-hidden border-t border-border-subtle py-20 px-4 bg-app-bg">
  <div class="hero-grid"></div>
  <div class="hero-glow-main !top-full !left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-20"></div>
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="col-span-1 md:col-span-2">
        <div class="text-2xl font-bold font-heading tracking-tighter text-text-primary mb-6"><%= t("application_name") %></div>
        <p class="text-text-secondary max-w-sm mb-8">
          <%= t("layouts.footer.tagline") %>
        </p>
        <div class="flex space-x-4">
          <%# Social links placeholders %>
          <div class="w-10 h-10 rounded-full bg-surface-subtle flex items-center justify-center text-text-muted hover:text-cta transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
          </div>
        </div>
      </div>
      <div>
        <h4 class="font-bold text-text-primary mb-6"><%= t("layouts.footer.platforms_heading") %></h4>
        <ul class="space-y-4 text-text-secondary">
          <li><%= t("layouts.footer.meta_ads") %></li>
          <li><%= t("layouts.footer.tiktok_ads") %></li>
          <li><%= t("layouts.footer.google_ads") %> <span class="text-[10px] bg-badge-bg text-badge-text px-1.5 py-0.5 rounded ml-1 font-bold"><%= t("layouts.footer.soon_badge") %></span></li>
          <li><%= t("layouts.footer.pinterest_ads") %> <span class="text-[10px] bg-badge-bg text-badge-text px-1.5 py-0.5 rounded ml-1 font-bold"><%= t("layouts.footer.soon_badge") %></span></li>
        </ul>
      </div>
      <div>
        <h4 class="font-bold text-text-primary mb-6"><%= t("layouts.footer.legal_heading") %></h4>
        <ul class="space-y-4 text-text-secondary">
          <li><%= t("layouts.footer.privacy") %></li>
          <li><%= t("layouts.footer.terms") %></li>
          <li><%= t("layouts.footer.legal_notice") %></li>
        </ul>
      </div>
    </div>
    <div class="max-w-7xl mx-auto mt-20 pt-8 border-t border-border-subtle flex flex-col md:flex-row justify-between items-center text-sm text-text-muted">
      <p><%= t("layouts.footer.copyright", year: Time.now.year) %></p>
      <p><%= t("layouts.footer.crafted_for") %></p>
    </div>
  </div>
</footer>
