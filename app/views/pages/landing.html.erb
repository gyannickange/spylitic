<% content_for :title, t("landing.page_title") %>

<%# Hero Section %>
<section class="hero-content relative overflow-hidden">
  <div class="glow-bg w-[500px] h-[500px] bg-cta top-[-100px] right-[-100px] opacity-20"></div>
  <div class="glow-bg w-[400px] h-[400px] bg-indigo-600 bottom-[-50px] left-[-100px] opacity-10"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <div class="lg:w-1/2 text-center lg:text-left">
        <div class="inline-flex items-center px-4 py-1.5 rounded-full border border-border-subtle bg-surface-subtle text-xs font-bold text-cta uppercase tracking-widest mb-8">
          <%= t("landing.hero.badge") %>
        </div>
        <h1 class="text-6xl md:text-7xl font-bold font-heading leading-[1.1] mb-8 text-gradient">
          <%= t("landing.hero.title") %> <span class="text-gradient-primary"><%= t("landing.hero.title_highlight") %></span>
        </h1>
        <p class="text-xl md:text-2xl text-text-secondary leading-relaxed mb-12 max-w-2xl">
          <%= t("landing.hero.subtitle") %>
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-6">
          <a href="#" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-bold rounded-2xl text-white bg-cta hover:bg-cta-hover transition-all shadow-2xl shadow-cta/30 hover:scale-105 active:scale-95 w-full sm:w-auto btn-primary-glow">
            <%= t("landing.hero.cta_explore") %>
          </a>
          <a href="#" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-2xl text-text-primary transition-all w-full sm:w-auto btn-glass">
            <%= t("landing.hero.cta_early_access") %>
          </a>
        </div>
        <div class="mt-12 flex items-center justify-center lg:justify-start space-x-6 text-sm text-text-muted">
          <span class="flex items-center"><svg class="w-4 h-4 mr-2 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> <%= t("landing.hero.legal") %></span>
          <span class="flex items-center"><svg class="w-4 h-4 mr-2 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> <%= t("landing.hero.public_data") %></span>
          <span class="flex items-center"><svg class="w-4 h-4 mr-2 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> <%= t("landing.hero.no_meta") %></span>
        </div>
      </div>
      <div class="lg:w-1/2 relative">
        <div class="animate-float relative z-10">
          <img src="/hero_marketing_intelligence_png_1769826357273.png" alt="<%= t("landing.hero.image_alt") %>" class="w-full h-auto rounded-3xl shadow-2xl">
        </div>
        <div class="absolute -inset-4 bg-cta/10 blur-3xl rounded-full z-0 pulse-glow"></div>
      </div>
    </div>
  </div>
</section>

<%# Le Problème Section %>
<section id="problem" class="bg-card-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold font-heading text-text-primary mb-6"><%= t("landing.problem.title") %></h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto"><%= t("landing.problem.subtitle") %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% t("landing.problem.items").each do |item| %>
        <div class="p-8 rounded-3xl bg-surface-subtle border border-border-default hover:border-error/30 transition-all group">
          <div class="w-12 h-12 bg-error/10 text-error rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </div>
          <h3 class="text-xl font-bold text-text-primary mb-4"><%= item[:title] %></h3>
          <p class="text-text-secondary"><%= item[:description] %></p>
        </div>
      <% end %>
    </div>

    <div class="mt-16 text-center">
      <p class="text-2xl font-semibold text-error/80 italic"><%= t("landing.problem.result") %></p>
    </div>
  </div>
</section>

<%# La Solution Section %>
<section id="solution" class="relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center gap-20">
      <div class="lg:w-1/2">
        <h2 class="text-4xl md:text-5xl font-bold font-heading text-text-primary mb-8"><%= t("landing.solution.title") %></h2>
        <p class="text-xl text-text-secondary mb-10 leading-relaxed">
          <%= t("landing.solution.intro") %>
        </p>

        <div class="space-y-6">
          <% t("landing.solution.items").each do |item| %>
            <div class="flex items-start gap-4">
              <div class="mt-1 w-6 h-6 rounded-full bg-cta/10 text-cta flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
              </div>
              <div>
                <h4 class="font-bold text-text-primary text-lg"><%= item[:title] %></h4>
                <p class="text-text-secondary"><%= item[:description] %></p>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-12 p-6 rounded-2xl bg-cta/5 border-l-4 border-cta">
          <p class="text-lg font-bold text-text-primary">
            <%= t("landing.solution.tagline_not_spy") %> <span class="text-cta"><%= t("landing.solution.tagline_understanding") %></span>
          </p>
        </div>
      </div>
      <div class="lg:w-1/2">
        <img src="/ai_analysis_visualization_png_1769826410997.png" alt="<%= t("landing.solution.image_alt") %>" class="w-full h-auto rounded-3xl shadow-2xl">
      </div>
    </div>
  </div>
</section>

<%# IA Analysis Features Section %>
<section id="features" class="bg-card-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold font-heading text-text-primary mb-6"><%= t("landing.features.title") %></h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto"><%= t("landing.features.subtitle") %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div class="glass-card p-10 rounded-[40px]">
        <h3 class="text-2xl font-bold text-text-primary mb-8 flex items-center">
          <span class="w-10 h-10 bg-cta/10 text-cta rounded-lg flex items-center justify-center mr-4">CTA</span>
          <%= t("landing.features.cta_intelligence.title") %>
        </h3>
        <ul class="space-y-4 text-text-secondary">
          <% t("landing.features.cta_intelligence.list").each do |line| %>
            <li class="flex items-center"><%= line %></li>
          <% end %>
        </ul>
      </div>

      <div class="glass-card p-10 rounded-[40px]">
        <h3 class="text-2xl font-bold text-text-primary mb-8 flex items-center">
          <span class="w-10 h-10 bg-purple-500/10 text-purple-500 rounded-lg flex items-center justify-center mr-4">CP</span>
          <%= t("landing.features.copy_decomposition.title") %>
        </h3>
        <div class="flex flex-wrap gap-3">
          <% t("landing.features.copy_decomposition.labels").each do |label| %>
            <span class="px-4 py-2 bg-purple-500/5 border border-purple-500/20 text-purple-400 rounded-full text-sm font-bold"><%= label %></span>
          <% end %>
        </div>
      </div>

      <div class="glass-card p-10 rounded-[40px]">
        <h3 class="text-2xl font-bold text-text-primary mb-8 flex items-center">
          <span class="w-10 h-10 bg-success/10 text-success rounded-lg flex items-center justify-center mr-4">AD</span>
          <%= t("landing.features.ad_angle.title") %>
        </h3>
        <div class="grid grid-cols-2 gap-4 text-sm font-medium">
          <% t("landing.features.ad_angle.angles").each do |angle| %>
            <div class="p-3 bg-surface-subtle rounded-xl"><%= angle %></div>
          <% end %>
        </div>
      </div>

      <div class="glass-card p-10 rounded-[40px]">
        <h3 class="text-2xl font-bold text-text-primary mb-8 flex items-center">
          <span class="w-10 h-10 bg-warning/10 text-warning rounded-lg flex items-center justify-center mr-4">LS</span>
          <%= t("landing.features.longevity.title") %>
        </h3>
        <p class="text-text-secondary mb-6"><%= t("landing.features.longevity.description") %></p>
        <div class="score-track mb-2">
          <div class="score-fill w-[85%]"></div>
        </div>
        <div class="flex justify-between text-xs text-text-muted font-bold">
          <span><%= t("landing.features.longevity.short") %></span>
          <span><%= t("landing.features.longevity.long") %></span>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Example Insight Section %>
