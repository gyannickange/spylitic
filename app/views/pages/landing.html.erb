              <div>
                <p class="text-xs font-bold text-text-muted uppercase"><%= t("landing.example_insight.platform_label") %></p>
                <p class="text-lg font-bold text-text-primary"><%= t("landing.example_insight.platform_value") %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xs font-bold text-text-muted uppercase"><%= t("landing.example_insight.ad_score_label") %></p>
              <p class="text-2xl font-bold text-cta"><%= t("landing.example_insight.ad_score_value") %></p>
            </div>
          </div>

          <ul class="space-y-4 mb-8">
            <li class="flex items-center text-text-secondary">
              <span class="text-success mr-3">•</span> <strong><%= t("landing.example_insight.angle_label") %></strong> <%= t("landing.example_insight.angle_value") %>
            </li>
            <li class="flex items-center text-text-secondary">
              <span class="text-success mr-3">•</span> <strong><%= t("landing.example_insight.cta_label") %></strong> <%= t("landing.example_insight.cta_value") %>
            </li>
            <li class="flex items-center text-text-secondary">
              <span class="text-success mr-3">•</span> <strong><%= t("landing.example_insight.ton_label") %></strong> <%= t("landing.example_insight.ton_value") %>
            </li>
            <li class="flex items-center text-text-secondary">
              <span class="text-success mr-3">•</span> <strong><%= t("landing.example_insight.duration_label") %></strong> <%= t("landing.example_insight.duration_value") %>
            </li>
          </ul>

          <p class="p-4 bg-cta/10 rounded-xl text-cta font-bold text-sm">
            <%= t("landing.example_insight.conclusion") %>
          </p>
        </div>
      </div>
      <div class="lg:w-1/2">
        <img src="/ad_insight_card_png_1769826426638.png" alt="<%= t("landing.example_insight.image_alt") %>" class="w-full h-auto rounded-3xl shadow-2xl">
      </div>
    </div>
  </div>
</section>

<%# Target Audience Section %>
<section id="audience" class="bg-surface-subtle">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold font-heading text-text-primary mb-6"><%= t("landing.audience.title") %></h2>
      <p class="text-xl text-text-secondary"><%= t("landing.audience.subtitle") %></p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
      <% t("landing.audience.items").each do |audience| %>
        <div class="bg-card-bg p-6 rounded-2xl border border-border-default flex items-center justify-center font-bold text-text-primary hover:border-cta transition-colors">
          <%= audience %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%# Cross-Platform & Legality Section %>
<section class="bg-card-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
      <div>
        <h2 class="text-3xl font-bold font-heading text-text-primary mb-8"><%= t("landing.cross_platform.title") %></h2>
        <p class="text-text-secondary mb-8 leading-relaxed">
          <%= t("landing.cross_platform.body") %>
        </p>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 rounded-xl border border-border-subtle flex flex-col items-center">
            <span class="text-3xl mb-2"><%= t("landing.cross_platform.meta_label") %></span>
            <span class="text-xs font-bold text-text-muted"><%= t("landing.cross_platform.meta_sublabel") %></span>
          </div>
          <div class="p-4 rounded-xl border border-border-subtle flex flex-col items-center">
            <span class="text-3xl mb-2"><%= t("landing.cross_platform.tiktok_label") %></span>
            <span class="text-xs font-bold text-text-muted"><%= t("landing.cross_platform.tiktok_sublabel") %></span>
          </div>
        </div>
      </div>

      <div class="p-10 rounded-[40px] border-2 border-dashed border-border-strong relative overflow-hidden">
        <div class="absolute top-0 right-10 bg-success text-white px-4 py-1 text-xs font-bold rounded-b-xl"><%= t("landing.cross_platform.legal_badge") %></div>
        <h2 class="text-3xl font-bold font-heading text-text-primary mb-8"><%= t("landing.cross_platform.legal_title") %></h2>
        <ul class="space-y-4">
          <% t("landing.cross_platform.legal_items").each do |legal_item| %>
            <li class="flex items-center text-text-secondary"><span class="w-1.5 h-1.5 bg-success rounded-full mr-3"></span> <%= legal_item %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%# Final CTA Section %>
<section class="relative py-32 overflow-hidden">
  <div class="glow-bg w-[600px] h-[600px] bg-cta top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-20"></div>
  <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
    <h2 class="text-5xl md:text-6xl font-bold font-heading mb-8 text-gradient"><%= t("landing.final_cta.title") %></h2>
    <p class="text-2xl text-text-secondary mb-12"><%= t("landing.final_cta.subtitle") %></p>

    <div class="bg-card-bg/50 backdrop-blur-xl p-12 rounded-[50px] border border-glass-border">
      <h3 class="text-2xl font-bold text-text-primary mb-6"><%= t("landing.final_cta.box_title") %></h3>
      <ul class="text-left max-w-md mx-auto space-y-4 mb-10 text-text-secondary">
        <% t("landing.final_cta.bullets").each do |bullet| %>
          <li class="flex items-center"><span class="text-cta mr-3">•</span> <%= bullet %></li>
        <% end %>
      </ul>
      <a href="#" class="inline-flex items-center justify-center px-12 py-5 border border-transparent text-xl font-bold rounded-2xl text-white bg-cta hover:bg-cta-hover transition-all shadow-2xl shadow-cta/30 hover:scale-105 active:scale-95 w-full">
        <%= t("landing.final_cta.button") %>
      </a>
    </div>
  </div>
</section>
